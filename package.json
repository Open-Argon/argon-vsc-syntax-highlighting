{
    "name": "argon-v3",
    "displayName": "The Argon Programming Language",
    "description": "Syntax highlighting and other features for the Argon programming language.",
    "version": "1.0.1",
    "publisher": "Open-Argon",
    "engines": {
        "vscode": "^1.60.0"
    },
    "icon": "logos/ArLogo.png",
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Open-Argon/argon-vsc-syntax-highlighting"
    },
    "contributes": {
        "languages": [
            {
                "id": "argon",
                "aliases": [
                    "Argon",
                    "argon"
                ],
                "extensions": [
                    ".ar"
                ],
                "icon": {
                    "light": "logos/ArLogo.png",
                    "dark": "logos/ArLogo.png"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "argon",
                "scopeName": "source.ar",
                "path": "./syntaxes/argon.tmLanguage.json"
            }
        ]
    }
}
